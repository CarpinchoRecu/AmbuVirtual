    }
  }

  header {
    padding: 9px;
    nav {
      gap: 45px;
      padding: 9px;

      a {
        font-size: 17px;
        padding: 2px;
      }
    }
  }
  }

  @media (max-width: 1150px) {
    section {
    gap: 8px;
    padding: 8px;

    a {
      font-size: 15px;
    }
  }

  header {
    padding: 8px;
    nav {
      gap: 40px;
      padding: 8px;

      a {
        font-size: 15px;
      }
    }
  }
  }

  @media (max-width: 1000px) {
    nav {
        display: none;
        a{
          display: none;
        }
    }
}

</style>
