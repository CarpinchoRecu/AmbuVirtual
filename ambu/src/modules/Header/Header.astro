<header>
  <h1>Ambu Virtual</h1>
  <h2>Rehabilitaci√≥n de Adicciones</h2>
  <div class="hamburger" id="hamburger">
    <div></div>
    <div></div>
    <div></div>
  </div>
  <nav>
    <div class="menu" id="menu">
      <a href="#tratamiento">Nuestro Tratamiento</a>
      <a href="#testimonios">Testimonios</a>
      <a href="#nosotros">Sobre Nosotros</a>
      <a id="contacto" href="#contact">Contacto</a>
    </div>
  </nav>
</header>

<script>
  function toggleMenu() {
    var menu = document.getElementById('menu');
    if (menu.style.display === 'flex') {
      menu.style.display = 'none';
    } else {
      menu.style.display = 'flex';
    }
  }

  function handleResize() {
    var menu = document.getElementById('menu');
    var hamburger = document.getElementById('hamburger');
    if (window.innerWidth > 768) {
      menu.style.display = 'flex';
      hamburger.style.display = 'none';
    } else {
      menu.style.display = 'none';
      hamburger.style.display = 'flex';
    }
  }

  document.getElementById('hamburger').addEventListener('click', toggleMenu);
  window.addEventListener('resize', handleResize);

  handleResize();
</script>

<style lang="scss">
  header {
    background-color: #2b561a;
    color: white;
    padding: 20px;
    padding-top: 25px;
    text-align: center;

    h1 {
      font-size: 40px;
    }

    h2 {
      font-size: 20px;
    }

    .hamburger {
      display: none;
    }

    nav {
      display: flex;
      justify-content: center;
      position: relative;
      .menu {
        padding: 20px;
        a {
          font-size: 20px;
          position: relative;
          color: white;
          padding: 15px 20px;
          text-decoration: none;
          text-align: center;
          transition: 0.2s ease-in-out;
          border-radius: 4px;
          &:hover {
            background-color: #45a049;
          }
        }

        a::before {
          content: " ";
          border-bottom: 1px #fff solid;
          position: absolute;
          width: 0;
          top: 38px;
          left: 0;
          transition: 0.2s ease-in-out;
        }

        a:hover::before {
          width: 100%;
        }

        #contacto{
          display: grid;
          place-items: center;
          text-align: center;
          color: #fff;
          padding: 10px;
          border-radius: 8px;
          border: 1px solid #fff;
        }
      }
    }
  }

  @media (max-width: 768px) {
    header {
      position: relative;

      h2 {
        padding: 10px;
      }

      .hamburger {
        position: absolute;
        top: 0;
        right: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        padding: 14px 20px;
        box-sizing: border-box;
        div {
          width: 25px;
          height: 2px;
          background-color: white;
          margin: 4px 0;
        }
      }

      .menu {
        display: none;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        background-color: #357b19;
        border-radius: 8px;

        a::before {
          display: none;
        }

        a {
          width: 90%;
          text-align: center;
          text-decoration: none;
          color: #fff;
          padding: 10px;
          text-align: left;

          &:hover {
            scale: 1.1;
            background-color: #2b561a;
            border-radius: 8px;
          }
        }
      }
    }
  }

  @media (max-width: 420px) {
    header {

      h1{
        font-size: 26px;
      }
      h2 {
        font-size: 16px;
        padding: 8px;
      }
    }
  }
</style>
